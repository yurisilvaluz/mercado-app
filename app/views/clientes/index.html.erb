<p style="color: green"><%= notice %></p>
<%= stylesheet_link_tag   'index' , media: 'all', 'data-turbolinks-track':  'reload' %>

<h1>Clientes</h1>
<button type="button" class="btn btn-outline-secondary"><%= link_to "Novo cliente", new_cliente_path %></button>

<hr>
<div id="clientes">
  <% @clientes.each do |cliente| %>
    <%= render cliente %>
    <p>
    <button type="button" class="btn btn-outline-secondary"><%= link_to "Mostrar", cliente %></button> 
    </p>
  <% end %>
</div>
